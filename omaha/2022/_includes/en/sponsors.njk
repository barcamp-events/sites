{%- from "../macros/sponsor.njk" import sponsor -%}

<midwest-layout class="dm:bg-theme-7 bg-white" id="sponsors" size="large">
    <copy-wrap align="center">
        <h2 class="fw7 dm:white mb-0">{{en.event.sponsors.title}}</h2>
        <p class="text-theme-5 dm:text-theme-2 mt-0">{{en.event.sponsors.leadin}}</p>
    </copy-wrap>

    <div class="relative clearfix z-1">
        <midwest-layout align="top" size="flush" type="sidebar">
            <div>
                <h6 class="white m- mb-3 text-uppercase fw7 dm:bg-theme-9 bg-theme-5 inline-block py-2 px-3 w-100 mw-100 db tc">
                    <midwest-animate-text>{{en.event.sponsors.platinum}}</midwest-animate-text>
                </h6>
                <midwest-button href="{{en.event.sponsors.platinum_link}}" block outline size="tiny" padding="tiny" target="_blank">{{en.event.sponsor_cta}}</midwest-button>
            </div>
            <midwest-grid class="items-center" style="--grid-width: 300px;">
                {% if en.sponsors.platinum %}
                    {% for slug, sponsor_object in en.sponsors.platinum %}
                        {% call sponsor(slug, sponsor_object, "platinum", "mv2 px-2 px-4-l") %}{% endcall %}
                    {% endfor %}
                {% else %}
                    <h4 class="tc">{{ en.event.sponsors.fallback_copy | replace("{0}", en.event.sponsors.platinum)}}</h4>
                {% endif %}
            </midwest-grid>
        </midwest-layout>

        <hr class="bg-theme-0 dm:bg-theme-8" />
        
        <midwest-layout align="top" size="flush" type="sidebar">
            <div>
                <h6 class="white m- mb-3 text-uppercase fw7 dm:bg-theme-9 bg-theme-5 inline-block py-2 px-3 w-100 mw-100 db tc">
                    <midwest-animate-text>{{en.event.sponsors.gold}}</midwest-animate-text>
                </h6>
                <midwest-button href="{{en.event.sponsors.gold_link}}" block outline size="tiny" padding="tiny" target="_blank">{{en.event.sponsor_cta}}</midwest-button>
            </div>
            <midwest-grid class="items-center" style="--grid-width: 300px;">
                {% if en.sponsors.gold %}
                    {% for slug, sponsor_object in en.sponsors.gold %}
                        {% call sponsor(slug, sponsor_object, "gold", "mv2 px-2 px-4-l") %}{% endcall %}
                    {% endfor %}
                {% else %}
                    <h4 class="tc">{{ en.event.sponsors.fallback_copy | replace("{0}", en.event.sponsors.gold) | safe}}</h4>
                {% endif %}
            </midwest-grid>
        </midwest-layout>

        <hr class="bg-theme-0 dm:bg-theme-8" />
        
        <midwest-layout align="top" size="flush" type="sidebar">
            <div>
                <h6 class="white mb-3 text-uppercase fw7 dm:bg-theme-9 bg-theme-5 inline-block py-2 px-3 w-100 mw-100 db tc">
                    <midwest-animate-text>{{en.event.sponsors.silver}}</midwest-animate-text>
                </h6>
                <midwest-button href="{{en.event.sponsors.silver_link}}" block outline size="tiny" padding="tiny" target="_blank">{{en.event.sponsor_cta}}</midwest-button>
            </div>
            <midwest-grid class="items-center" style="--grid-width: 300px;">
                {% if en.sponsors.silver %}
                    {% for slug, sponsor_object in en.sponsors.silver %}
                        {% call sponsor(slug, sponsor_object, "silver", "mv2 px-2 px-4-l") %}{% endcall %}
                    {% endfor %}
                {% else %}
                    <h4 class="tc">{{ en.event.sponsors.fallback_copy | replace("{0}", en.event.sponsors.silver) | safe}}</h4>
                {% endif %}
            </midwest-grid>
        </midwest-layout>
        
        <hr class="bg-theme-0 dm:bg-theme-8" />
        
        <midwest-layout align="top" size="flush" type="sidebar">
            <div>
                <h6 class="white m- mb-3 text-uppercase fw7 dm:bg-theme-9 bg-theme-5 inline-block py-2 px-3 w-100 mw-100 db tc">
                    <midwest-animate-text>{{en.event.sponsors.bronze}}</midwest-animate-text>
                </h6>
                <midwest-button href="{{en.event.sponsors.bronze_link}}" block outline size="tiny" padding="tiny" target="_blank">{{en.event.sponsor_cta}}</midwest-button>
            </div>
            <midwest-grid class="items-center" style="--grid-width: 300px;">
                {% if en.sponsors.bronze %}
                    {% for slug, sponsor_object in en.sponsors.bronze %}
                        {% call sponsor(slug, sponsor_object, "bronze", "mv2 px-2 px-4-l") %}{% endcall %}
                    {% endfor %}
                {% else %}
                    <h4 class="tc">{{ en.event.sponsors.fallback_copy | replace("{0}", en.event.sponsors.bronze) | safe}}</h4>
                {% endif %}
            </midwest-grid>
        </midwest-layout>
        
        <hr class="bg-theme-0 dm:bg-theme-8" />
    </div>
</midwest-layout>