<midwest-layout align="top" class="bg-white dm:bg-theme-8" id="venue" size="large" type="half">
    <midwest-grid class="self-center" style="--grid-gap: 0; --grid-width: 350px;">
        <copy-wrap class="br border-theme-2 dm:border-theme-8 p-3">
            <h6 class="text-theme-5 dm:text-theme-2 uppercase fs7 fw7 tracked">{{en.event.venue.title}}</h6>
            <div class="flex items-center">
                <img class="mb-0 db w2 h-auto mr-2" src="/assets/images/pins/pin-event.png" width="40"/>
                <h3 class="text-black dm:text-white fw8">{{en.event.venue.name}}</h3>
            </div>
            <h6 class="text-theme-7 dm:text-theme-2 fs7 b">
                <address>
                    {{en.event.venue.address}}
                </address>
            </h6>

            <p class="text-theme-5 dm:text-theme-4 text-sm">{{en.event.venue.description}}</p>
        </copy-wrap>
        <copy-wrap class="md:p-3">
            <h6 class="text-theme-5 dm:text-theme-2 uppercase fs7 fw7 tracked">{{en.event.opening_party.title}}</h6>
            <div class="flex items-center">
                <img class="mb-0 db w2 h-auto mr-2" src="/assets/images/pins/pin-party.png" width="40"/>
                <h3 class="text-black dm:text-white fw8">{{en.event.opening_party.name}}</h3>
            </div>
            <h6 class="text-theme-7 dm:text-theme-2 fs7 b">
                <address>
                    {{en.event.opening_party.address}}
                </address>
            </h6>

            <p class="text-theme-5 dm:text-theme-4 text-sm">{{en.event.opening_party.description}}</p>
        </copy-wrap>
    </midwest-grid>

    <div class="flex items-center justify-center bg-gold h-full">
        <midwest-google-maps apikey="{{google.apikey}}" lat="{{en.event.venue.lat}}" lng="{{en.event.venue.lng}}" zoom="{{en.event.venue.zoom}}" block theme="dark-minimal" no-ui class="h-full">
            <midwest-google-maps-marker lat="{{en.event.venue.lat}}" lng="{{en.event.venue.lng}}" marker-title="{{en.event.venue.name}}" icon="/assets/images/pins/pin-event.png" icon-width="37" icon-height="57.5">
                <h6 class="text-theme-5 dm:text-theme-5 uppercase fs8 fw7 tracked">{{en.event.venue.title}}</h6>
                <h5 class="dm:text-theme-9 m- p-0 b">{{en.event.venue.name}}</h5>
                <p class="dm:text-theme-7 m-">{{en.event.venue.address}}</p>
                <midwest-button block href="https://www.google.com/maps/dir/?api=1&destination={{en.event.venue.address}}" padding="tiny" size="tiny" tag="link" target="_blank">
                    {{en.event.venue.directions}}
                </midwest-button>
            </midwest-google-maps-marker>
            
            <midwest-google-maps-marker lat="{{en.event.opening_party.lat}}" lng="{{en.event.opening_party.lng}}" marker-title="{{en.event.opening_party.name}}" icon="/assets/images/pins/pin-party.png" icon-width="37" icon-height="57.5">
                <h6 class="text-theme-5 dm:text-theme-5 uppercase fs8 fw7 tracked">{{en.event.opening_party.title}}</h6>
                <h5 class="dm:text-theme-9 m- p-0 b">{{en.event.opening_party.name}}</h5>
                <p class="dm:text-theme-7 m-">{{en.event.opening_party.address}}</p>
                <midwest-button block href="https://www.google.com/maps/dir/?api=1&destination={{en.event.opening_party.address}}" padding="tiny" size="tiny" tag="link" target="_blank">
                    {{en.event.opening_party.directions}}
                </midwest-button>
            </midwest-google-maps-marker>
        </midwest-google-maps>
    </div>
</midwest-layout>