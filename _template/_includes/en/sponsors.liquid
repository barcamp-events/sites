<stellar-layout class="dm-bg-theme-base7 bg-white" id="sponsors" size="large">
    <copy-wrap align="center">
        <h2 class="fw7 dm-white mb0">{{en.event.sponsors.title}}</h2>
        <p class="theme-base5 dm-theme-base1 lh-copy mt0">{{en.event.sponsors.leadin}}</p>
    </copy-wrap>

    <div class="relative clearfix z-1">
        <stellar-layout align="top" size="flush" type="sidebar">
            <div>
                <h6 class="white ma0 mb3 ttu fw7 dm-bg-theme-base9 bg-theme-base5 dib pv2 ph3 w-100 mw-100 db tc">
                    <stellar-animate-text>{{en.event.sponsors.platinum}}</stellar-animate-text>
                </h6>
                <stellar-button href="{{en.event.sponsors.platinum_link}}" block outline size="tiny" padding="tiny" target="_blank">{{en.event.sponsor_cta}}</stellar-button>
            </div>
            <stellar-grid class="items-center" style="--grid-width: 300px;">
                {% if en.sponsors.platinum %}
                    {% for sponsor in en.sponsors.platinum %}
                        {% assign level = "platinum" %}
                        {% assign spacing = "mv2 ph2 ph4-l" %}
                        {% include en/sponsor %}
                    {% endfor %}
                {% else %}
                    <h4 class="tc">{{ en.event.sponsors.fallback_copy | replace: "{0}", en.event.sponsors.platinum}}</h4>
                {% endif %}
            </stellar-grid>
        </stellar-layout>
        <hr class="bg-theme-base0 dm-bg-theme-base8"/>

        <stellar-layout align="top" size="flush" type="sidebar-right">
            <div class="order-1-l order-1-m tr order-0">
                <h6 class="white ma0 mb3 ttu fw7 dm-bg-theme-base9 bg-theme-base5 dib pv2 ph3 w-100 mw-100 db tc">
                    <stellar-animate-text>
                        {{en.event.sponsors.gold}}
                    </stellar-animate-text>
                </h6>
                <stellar-button href="{{en.event.sponsors.gold_link}}" block outline size="tiny" padding="tiny" target="_blank">{{en.event.sponsor_cta}}</stellar-button>
            </div>
            <stellar-grid class="items-center order-0">
                {% if en.sponsors.gold %}
                    {% for sponsor in en.sponsors.gold %}
                        {% assign level = "gold" %}
                        {% assign spacing = "mv2 ph2 ph1-l" %}
                        {% include en/sponsor %}
                    {% endfor %}
                {% else %}
                    <h4 class="tc">{{ en.event.sponsors.fallback_copy | replace: "{0}", en.event.sponsors.gold}}</h4>
                {% endif %}
            </stellar-grid>
        </stellar-layout>

        <hr class="bg-theme-base0 dm-bg-theme-base8"/>

